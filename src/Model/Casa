<?php

namespace Models;

use Models\Aluno;

class Casa
{
    private string $nome;
    private array $alunos = [];
    private int $pontos = 0;

    public function __construct(string $nome)
    {
        $this->nome = $nome;
    }

    // Getter e Setter para nome
    public function getNome(): string
    {
        return $this->nome;
    }

    public function setNome(string $nome): void
    {
        $this->nome = $nome;
    }

    // Getter e Setter para alunos
    public function getAlunos(): array
    {
        return $this->alunos;
    }

    public function setAlunos(array $alunos): void
    {
        $this->alunos = $alunos;
    }

    // Adicionar um aluno
    public function adicionarAluno(Aluno $aluno): void
    {
        $this->alunos[] = $aluno;
    }

    // Getter e Setter para pontos
    public function getPontos(): int
    {
        return $this->pontos;
    }

    public function setPontos(int $pontos): void
    {
        $this->pontos = $pontos;
    }

    // Adicionar pontos
    public function adicionarPontos(int $quantidade): void
    {
        $this->pontos += $quantidade;
    }
}
